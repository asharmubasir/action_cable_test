<!DOCTYPE html>
<html>
  <head>
    <title>RailsChannel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= link_to 'logout', destroy_user_session_path, method: :delete if user_signed_in? %>
    <%= link_to 'Chat Room', messages_path if user_signed_in? %>
    <%= link_to 'Articles', articles_path if user_signed_in? %>
    <%= link_to 'Login', new_user_session_path unless user_signed_in? %>

  
    <%= yield %>

  </body>
</html>
